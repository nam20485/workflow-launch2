{
  "mcpServers": {
    "sequential-thinking": {
      "type": "local",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking@0.0.1"
      ],
      "tools": ["*"]
    },
    "memory": {
      "type": "local",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory@0.0.1"
      ],
      "tools": ["*"]
    },
    "filesystem": {
      "type": "local",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ],
      "tools": [
        "list_directory",
        "read_directory",
        "stat",
        "glob",
        "read_file",
        "read_text_file"
      ]
    },
    "gemini-cli": {
      "type": "local",
      "command": "npx",
      "args": [
        "-y",
        "gemini-mcp-tool"
      ],
      "tools": ["*"]
    },
    "notion": {
      "type": "local",
      "command": "npx",
      "args": [
        "-y",
        "@notionhq/notion-mcp-server"
      ],
      "env": {
        "OPENAPI_MCP_HEADERS": "COPILOT_MCP_NOTION_OPENAPI_HEADERS"
      },
      "tools": ["*"]
    },
    "context7": {
      "type": "local",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "tools": ["*"]
    },
    "microsoft-docs": {
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp",
      "tools": ["*"]
    },
    "deepwiki": {
      "type": "sse",
      "url": "https://mcp.deepwiki.com/sse",
      "tools": ["*"]
    },
    "playwright": {
      "type": "local",
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ],
      "tools": ["*"]
    }
  }
}
